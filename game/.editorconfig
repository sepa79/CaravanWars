# EditorConfig helps maintain consistent coding styles
root = true

# Default: use space for indentation
[*]
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true

# Godot scripts and resources
[*.gd]
indent_style = space
indent_size = 4

[*.tscn]
indent_style = space
indent_size = 4

[*.tres]
indent_style = space
indent_size = 4

# Batch and text
[*.bat]
indent_style = space

[*.txt]
indent_style = space

# Markdown (allow tabs for indents)
[*.md]
indent_style = tab

# YAML must use spaces (language restriction)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

