{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CaravanWars MapBundle",
  "type": "object",
  "required": [
    "meta",
    "nodes",
    "edges",
    "cities",
    "villages",
    "crossings",
    "forts",
    "kingdoms",
    "climate_cells"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "seed": {
          "type": "integer"
        },
        "map_size": {
          "type": "integer",
          "description": "rozmiar w jednostkach U"
        },
        "unit_scale": {
          "type": "number",
          "description": "ile pikseli na 1U w widoku"
        }
      },
      "required": [
        "version",
        "seed",
        "map_size"
      ]
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          }
        },
        "required": [
          "id",
          "x",
          "y"
        ]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "a": {
            "type": "integer"
          },
          "b": {
            "type": "integer"
          },
          "class": {
            "type": "string",
            "enum": [
              "Roman",
              "Road",
              "Path"
            ]
          },
          "length": {
            "type": "number"
          },
          "crossing_id": {
            "type": [
              "integer",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "a",
          "b",
          "class",
          "length"
        ]
      }
    },
    "cities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "kingdom_id": {
            "type": "integer"
          },
          "is_capital": {
            "type": "boolean"
          },
          "production": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        },
        "required": [
          "id",
          "x",
          "y",
          "kingdom_id",
          "is_capital",
          "production"
        ]
      }
    },
    "villages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "city_id": {
            "type": "integer"
          },
          "road_node_id": {
            "type": "integer"
          },
          "production": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        },
        "required": [
          "id",
          "x",
          "y",
          "city_id",
          "road_node_id",
          "production"
        ]
      }
    },
    "crossings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "type": {
            "type": "string",
            "enum": [
              "bridge",
              "ford"
            ]
          },
          "river_id": {
            "type": [
              "integer",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "x",
          "y",
          "type"
        ]
      }
    },
    "forts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "edge_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "crossing_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "pair_id": {
            "type": [
              "integer",
              "null"
            ]
          }
        },
        "required": [
          "id",
          "x",
          "y"
        ]
      }
    },
    "kingdoms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "capital_city_id": {
            "type": "integer"
          },
          "polygon": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        },
        "required": [
          "id",
          "capital_city_id",
          "polygon"
        ]
      }
    },
    "rivers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "polyline": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        },
        "required": [
          "id",
          "polyline"
        ]
      }
    },
    "climate_cells": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "polygon": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "temp": {
            "type": "number"
          },
          "moisture": {
            "type": "number"
          },
          "biome_id": {
            "type": "integer"
          },
          "prod_mod": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        },
        "required": [
          "id",
          "polygon",
          "temp",
          "moisture",
          "biome_id",
          "prod_mod"
        ]
      }
    }
  }
}